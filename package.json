{
  "name": "valence",
  "version": "1.0.0",
  "main": "main/index.js",
  "author": {
    "name": "Anant Narayan"
  },
  "description": "Modern, fast and lightweight code editor for the 21st century",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript"
  ],
  "productName": "Valence",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \" npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run clean && npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.1.3",
    "@uiw/codemirror-theme-atomone": "^4.19.8",
    "@uiw/react-codemirror": "^4.19.8",
    "@vitejs/plugin-react": "^1.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.1.0",
    "postcss-loader": "^7.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "vite": "^3.0.0",
    "wallpaper": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.22",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^17.0.53",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "electron": "^18.0.2",
    "electron-builder": "^22.14.13",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "postcss": "^8.4.21",
    "prettier": "2.6.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.6.2"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "icon": "./src/assets/icons/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false
    }
  }
}
